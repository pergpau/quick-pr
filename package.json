{
  "name": "quick-pr",
  "displayName": "Quick PR",
  "description": "Create pull requests from selected lines or staged changes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "type": "module", 
  "categories": [
    "Other"
  ],
  "publisher": "pergpau",
  "author": {
    "name": "Per Gunnar Paulsen (pergpau)"
  },
  "pricing": "Free",
  "icon": "images/icon_128.png",
  "license": "See LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/pergpau/quick-pr"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quickPr.makePRFromSelection",
        "title": "Make PR from selection",
        "category": "Quick PR"
      },
      {
        "command": "quickPr.makePRFromStaged",
        "title": "Make PR from staged changes",
        "category": "Quick PR"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quickPr.makePRFromSelection",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Quick PR",
      "properties": {
        "quickPr.githubUsername": {
          "type": "string",
          "description": "GitHub username (used for branch naming)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "open": "^10.2.0",
    "simple-git": "^3.19.1",
    "uuid": "^13.0.0"
  }
}
